<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/drawer_text_layout_height</item>
        <item name="android:padding">@dimen/drawer_item_padding</item>
        <item name="android:drawablePadding">@dimen/drawer_text_drawable_padding</item>
        <item name="android:layout_marginTop">@dimen/drawer_text_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/drawer_text_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/drawer_text_margin_top_bottom</item>
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <!--this can be edited using fonts probably-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--TOOLBAR-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:gravity">center</item>
    </style>

<style name="layout_edit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:padding">4dp</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:textSize">20dp</item>
</style>

</resources>
