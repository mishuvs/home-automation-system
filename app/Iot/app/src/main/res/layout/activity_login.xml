<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/progress_bar_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="72dp"/>

    <EditText
        android:id="@+id/password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/email_login"
        android:layout_below="@id/email_login"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignLeft="@id/email_login"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/password_login"
        android:layout_below="@id/password_login"
        android:layout_marginStart="55dp"
        android:layout_marginTop="33dp"
        android:text="Login"
        android:layout_alignLeft="@id/password_login"
        android:layout_marginLeft="55dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_login"
        android:layout_alignEnd="@+id/button_login"
        android:layout_marginRight="14dp"/>

    <Button
        android:id="@+id/signup_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:gravity="center_horizontal"
        android:layout_below="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_marginTop="16dp"/>

</RelativeLayout>